package Scheduling_algos;

import java.util.*;

class RRProcess {
    int pid;   // Process ID
    int at;    // Arrival Time
    int bt;    // Burst Time
    int rt;    // Remaining Time
    int ct;    // Completion Time
    int tat;   // Turnaround Time
    int wt;    // Waiting Time

    RRProcess(int pid, int at, int bt) {
        this.pid = pid;
        this.at = at;
        this.bt = bt;
        this.rt = bt; // Initially, remaining time = burst time
    }
}

public class Round_Robin {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input
        System.out.print("Enter number of processes: ");
        int n = sc.nextInt();
        RRProcess[] p = new RRProcess[n];

        for (int i = 0; i < n; i++) {
            System.out.print("Enter Arrival Time for P" + (i + 1) + ": ");
            int at = sc.nextInt();
            System.out.print("Enter Burst Time for P" + (i + 1) + ": ");
            int bt = sc.nextInt();
            p[i] = new RRProcess(i + 1, at, bt);
        }

        System.out.print("Enter Time Quantum: ");
        int tq = sc.nextInt();

        Queue<RRProcess> q = new LinkedList<>();
        int currentTime = 0, completed = 0;
        double totalTAT = 0, totalWT = 0;

        // Sort by arrival time
        Arrays.sort(p, Comparator.comparingInt(a -> a.at));
        int idx = 0;

        while (completed < n) {
            // Add processes that have arrived
            while (idx < n && p[idx].at <= currentTime) {
                q.add(p[idx]);
                idx++;
            }

            if (q.isEmpty()) {
                currentTime++;
            } else {
                RRProcess cur = q.poll();

                int execTime = Math.min(tq, cur.rt);
                cur.rt -= execTime;
                currentTime += execTime;

                // Add newly arrived processes
                while (idx < n && p[idx].at <= currentTime) {
                    q.add(p[idx]);
                    idx++;
                }

                if (cur.rt > 0) {
                    q.add(cur); // Not finished yet, re-add to queue
                } else {
                    cur.ct = currentTime;
                    cur.tat = cur.ct - cur.at;
                    cur.wt = cur.tat - cur.bt;
                    completed++;

                    totalTAT += cur.tat;
                    totalWT += cur.wt;
                }
            }
        }

        // Output
        System.out.println("\nPID\tAT\tBT\tCT\tTAT\tWT");
        for (int i = 0; i < n; i++) {
            System.out.println("P" + p[i].pid + "\t" + p[i].at + "\t" + p[i].bt + "\t" +
                               p[i].ct + "\t" + p[i].tat + "\t" + p[i].wt);
        }

        System.out.println("\nAverage Turnaround Time = " + (totalTAT / n));
        System.out.println("Average Waiting Time = " + (totalWT / n));

        sc.close();
    }
}


INPUT
Enter number of processes: 4
Enter Time Quantum: 3
Enter Arrival Time for P1: 0
Enter Burst Time for P1: 8
Enter Arrival Time for P2: 1
Enter Burst Time for P2: 2
Enter Arrival Time for P3: 2
Enter Burst Time for P3: 5
Enter Arrival Time for P4: 4
Enter Burst Time for P4: 1


PID     AT      BT      CT      TAT     WT
P1      0       8       16      16      8
P2      1       2       5       4       2
P3      2       5       14      12      7
P4      4       1       12      8       7

Average Turnaround Time = 10.00
Average Waiting Time = 6.00
